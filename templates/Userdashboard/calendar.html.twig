{# templates/calendar/index.html.twig #}

<div class="ps-4 text-center d-flex">
    <div class="calendar-container mb-4" id="calendar_box">
        <header class="calendar-header">
            <p class="calendar-current-date"></p>
            <div class="calendar-navigation">
                <span id="calendar-prev" class="material-symbols-rounded">chevron_left</span>
                <span id="calendar-next" class="material-symbols-rounded">chevron_right</span>
            </div>
        </header>
        <div class="calendar-body">
            <ul class="calendar-weekdays">
                <li>Sun</li>
                <li>Mon</li>
                <li>Tue</li>
                <li>Wed</li>
                <li>Thu</li>
                <li>Fri</li>
                <li>Sat</li>
            </ul>
            <ul class="calendar-dates"></ul>
        </div>
    </div>

    <div class="card ms-3" id="EventBox">
        <div class="card-header">Event Details</div>
        <div id="eventDisplay" class="card border-0 overflow-auto" style="display: none;">
            {% for event in events %}
                <div class="card-body border-bottom">
                    <h5 class="card-title">{{ event.name }}</h5>
                    <p class="card-text">{{ event.StartDate|date('Y-m-d H:i:s') }} - {{ event.EndDate|date('Y-m-d H:i:s') }}</p>
                    <p class="card-title">{{ event.Location }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="timezone-select">
        <label><input type="checkbox" value="Asia/Kolkata"> India Time (IST)</label>
        <label><input type="checkbox" value="Europe/Berlin"> Germany Time (CET)</label>
    </div>
</div>
