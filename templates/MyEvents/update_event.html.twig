    max-width: 1200px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

     

   .form-container h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
        
    }

   .form-container.form-control {
        background: #fff;
        border: none;
        border-radius: 5px;
        color: #333;
    }

   .form-container.form-control:focus {
        background: #fff;
        color: #333;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

   .form-container.btn-primary {
        background: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1.1rem;
        color: #fff;
    }

   .form-container.btn-primary:hover {
        background: #0056b3;
    }

   .form-container a.link-danger {
        color: #dc3545;
    }

   .form-container a.link-danger:hover {
        color: #a71d2a;
    }
