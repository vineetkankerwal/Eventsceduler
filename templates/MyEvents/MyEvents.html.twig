            </section>

            <section id="EventList" class="mt-2 ">
                <h2 class="text-center display-5 ">List of Events 
                        
                     
                            </h2>
                            <div class="d-flex flex-row">
                <button id="filterButton" type="button" class="btn1 btn btn-dark d-flex justify-content-center p-1 w-25 fs-4" data-bs-toggle="modal" data-bs-target="#filterModal">
                    <span class="ms-2">Filter</span>
                    <span class="ml-2">&#x1F50D;</span>
                    
                </button>
                 <input type="text" id="searchInput" placeholder="Search events by name.."class="d-flex flex-column">
                 </div>
                <div class="modal fade" id="filterModal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="filterModalLabel">Filter Events</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                     <form id="filterForm">
                                    <div class="form-group">
                                        <label class="mb-1" for="startDate">Start Date</label>
                                        <input type="date" class="form-control mb-2" id="startDate" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" for="endDate">End Date</label>
                                        <input type="date" class="form-control mb-2" id="endDate" required>
                                    </div>
                                   
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
               
                  
                <div class="container mt-5">
                    <div class="table-container">
                   
                        <table border="1" class="table table-bordered text-center" id="listOfEventsBox">
                            <thead class="table-dark">
                          
                                <tr>
                                    <th>Id</th>
                                    <th>Event Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Location</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td>{{ event.id }}</td>
                                        <td>{{ event.name }}</td>
                                        <td>{{ event.StartDate|date('Y-m-d H:i A') }}</td>
                                        <td>{{ event.EndDate|date('Y-m-d H:i A') }}</td>
                                        <td>{{ event.Location }}</td>
                                        <td>
                                            <form action="{{ path('delete_event', {'id': event.id}) }}" method="POST" class="d-inline">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-danger">Delete Record</button>
                                            </form>
                                            <a href="{{ path('app_event_update', {'id': event.id}) }}" class="btn btn-primary">Update Record</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script>
        // JavaScript to copy the address
        const copyButton = document.getElementById('copy-button');
        const homePageAddress = document.getElementById('home-page-address');
        copyButton.addEventListener('click', () => {
            navigator.clipboard.writeText(homePageAddress.textContent);
            alert('Address copied to clipboard!');
        });
    </script>

    <script>
        // JavaScript to filter events
        const filterForm = document.getElementById('filterForm');
        const startDateInput = document.getElementById('startDate');
        const endDateInput = document.getElementById('endDate');
        const eventTable = document.getElementById('listOfEventsBox');

        filterForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const startDate = new Date(startDateInput.value);
            const endDate = new Date(endDateInput.value);
            const events = [...eventTable.rows].slice(1); // exclude header row

            events.forEach((event) => {
                const eventStartDate = new Date(event.cells[2].textContent);
                const eventEndDate = new Date(event.cells[3].textContent);

                if (eventStartDate >= startDate && eventEndDate <= endDate) {
                    event.style.display = '';
                } else {
                    event.style.display = 'none';
                   
                }

            });
            
            
        });
        const submitbtn = document.getElementById('submitButton');
       const submitBtn = document.getElementById('submitButton');

submitBtn.addEventListener('click', () => {
  
  $('#filterModal').modal('hide');
  // Or if you're using a custom modal implementation
  document.getElementById('filterModal').style.display = 'none';
});
 document.getElementById('searchInput').addEventListener('keyup', function() {
        let input = this.value.toLowerCase();
        let table = document.getElementById('listOfEventsBox');
        let rows = table.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            let cells = row.querySelectorAll('td');
            let found = Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(input));
            row.style.display = found ? '' : 'none';
        });
    });
    
    </script>
